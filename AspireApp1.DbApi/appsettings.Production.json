{
  "ConnectionStrings": {
    "DefaultConnection": "Host=${POSTGRES_HOST};Port=5432;Database=aspire_db;Username=${POSTGRES_USER};Password=${POSTGRES_PASSWORD};SSL Mode=Require;"
  },
  "FileStorage": {
    "UseAzureBlob": true,
    "AzureBlobConnectionString": "${AZURE_STORAGE_CONNECTION_STRING}",
    "ContainerName": "uploads",
    "BasePath": "FileUploads"
  },
  "ApplicationInsights": {
    "ConnectionString": "${APPLICATIONINSIGHTS_CONNECTION_STRING}"
  },
  "OTEL_EXPORTER_OTLP_ENDPOINT": "${OTEL_EXPORTER_OTLP_ENDPOINT}",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
