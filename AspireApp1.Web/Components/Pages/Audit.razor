@page "/audit"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject AuditApiClient AuditApi
@inject NavigationManager Navigation

<PageTitle>Audit Logs</PageTitle>

<h1>Audit Logs</h1>

<div class="row mb-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Filter Audit Logs</h5>
                @if (isAdmin)
                {
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="viewAllSwitch" @bind="viewAll" @bind:after="LoadAuditLogsAsync" />
                        <label class="form-check-label" for="viewAllSwitch">
                            <strong>View All Users</strong>
                        </label>
                    </div>
                }
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Entity Type</label>
                        <select class="form-select" @bind="filterEntityType" @bind:after="ApplyFilters">
                            <option value="">All Types</option>
                            @foreach (var type in availableEntityTypes)
                            {
                                <option value="@type">@GetEntityDisplayName(type)</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Action</label>
                        <select class="form-select" @bind="filterAction" @bind:after="ApplyFilters">
                            <option value="">All Actions</option>
                            @foreach (var action in availableActions)
                            {
                                <option value="@action">@action</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">From Date</label>
                        <input type="date" class="form-control" @bind="filterFromDate" @bind:after="ApplyFilters" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">To Date</label>
                        <input type="date" class="form-control" @bind="filterToDate" @bind:after="ApplyFilters" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Search</label>
                        <input type="text" class="form-control" @bind="searchText" @bind:event="oninput" @onkeyup="ApplyLocalFilters" placeholder="Username, entity..." />
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <button class="btn btn-secondary w-100" @onclick="ClearFilters">Clear</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (isLoading)
{
    <p><em>Loading audit logs...</em></p>
}
else if (filteredLogs.Length == 0)
{
    <p class="text-muted">No audit logs found matching the filters.</p>
}
else
{
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Audit Logs (@filteredLogs.Length total)</h5>
            <div>
                <span class="me-2">Items per page:</span>
                <select class="form-select form-select-sm d-inline-block" style="width: auto;" @bind="pageSize" @bind:after="UpdatePagination">
                    <option value="10">10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="cursor: pointer;" @onclick='() => SortBy("Timestamp")'>
                                Timestamp @GetSortIcon("Timestamp")
                            </th>
                            <th style="cursor: pointer;" @onclick='() => SortBy("Username")'>
                                User @GetSortIcon("Username")
                            </th>
                            <th style="cursor: pointer;" @onclick='() => SortBy("Action")'>
                                Action @GetSortIcon("Action")
                            </th>
                            <th style="cursor: pointer;" @onclick='() => SortBy("EntityType")'>
                                Entity Type @GetSortIcon("EntityType")
                            </th>
                            <th>Entity ID</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in pagedLogs)
                        {
                            <tr>
                                <td>@log.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>@log.Username</td>
                                <td>
                                    <span class="badge @GetActionBadgeClass(log.Action)">
                                        @log.Action
                                    </span>
                                </td>
                                <td>@GetEntityDisplayName(log.EntityType)</td>
                                <td>
                                    @if (log.EntityId.HasValue)
                                    {
                                        <a href="@GetEntityNavigationUrl(log.EntityType, log.EntityId.Value)" class="text-decoration-none">
                                            @log.EntityId.Value
                                        </a>
                                    }
                                    else
                                    {
                                        <text>-</text>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewSnapshot(log)">
                                        <span class="bi bi-eye"></span> View Snapshot
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <nav aria-label="Audit logs pagination">
                <ul class="pagination pagination-sm mb-0 justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="() => GoToPage(1)" disabled="@(currentPage == 1)">First</button>
                    </li>
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">Previous</button>
                    </li>
                    
                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                    {
                        var pageNum = i;
                        <li class="page-item @(currentPage == pageNum ? "active" : "")">
                            <button class="page-link" @onclick="() => GoToPage(pageNum)">@pageNum</button>
                        </li>
                    }
                    
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">Next</button>
                    </li>
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="() => GoToPage(totalPages)" disabled="@(currentPage == totalPages)">Last</button>
                    </li>
                </ul>
            </nav>
            <div class="text-center mt-2 text-muted">
                <small>Page @currentPage of @totalPages (showing @pagedLogs.Length of @filteredLogs.Length logs)</small>
            </div>
        </div>
    </div>
}

@if (selectedLog != null)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Entity Snapshot</h5>
                    <button type="button" class="btn-close" @onclick="CloseSnapshot"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Timestamp:</strong> @selectedLog.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</p>
                            <p><strong>User:</strong> @selectedLog.Username</p>
                            <p><strong>Action:</strong> <span class="badge @GetActionBadgeClass(selectedLog.Action)">@selectedLog.Action</span></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Entity Type:</strong> @GetEntityDisplayName(selectedLog.EntityType)</p>
                            <p><strong>Entity ID:</strong> @(selectedLog.EntityId?.ToString() ?? "N/A")</p>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(selectedLog.EntitySnapshot))
                    {
                        <hr />
                        <h6>Entity Data at Time of Action:</h6>
                        <pre class="bg-light p-3 rounded" style="max-height: 400px; overflow-y: auto;">@FormatJson(selectedLog.EntitySnapshot)</pre>
                    }
                    else
                    {
                        <p class="text-muted">No snapshot data available for this log entry.</p>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseSnapshot">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private AuditLogDto[]? logs;
    private AuditLogDto[] filteredLogs = Array.Empty<AuditLogDto>();
    private AuditLogDto[] pagedLogs = Array.Empty<AuditLogDto>();
    private AuditLogDto? selectedLog;
    
    private bool isLoading = true;
    private bool isAdmin = false;
    private bool viewAll = false;

    // Dynamic filter options
    private List<string> availableEntityTypes = new();
    private List<string> availableActions = new();

    // Filter properties
    private string searchText = "";
    private string filterEntityType = "";
    private string filterAction = "";
    private DateTime? filterFromDate;
    private DateTime? filterToDate;

    // Pagination properties
    private int currentPage = 1;
    private int pageSize = 25;
    private int totalPages = 1;

    // Sorting properties
    private string sortColumn = "Timestamp";
    private bool sortAscending = false;

    // Entity type display name mapping
    private readonly Dictionary<string, string> entityDisplayNames = new()
    {
        { "Customer", "Customer" },
        { "CustomerOrder", "Order" },
        { "Project", "Project" },
        { "ProjectActivity", "Project Activity" },
        { "CustomerDatabase", "Database" },
        { "CustomerSite", "Site" },
        { "CustomerSystem", "System" },
        { "System", "System" },
        { "SystemComponent", "System Component" },
        { "User", "User" },
        { "Role", "Role" }
    };

    protected override async Task OnInitializedAsync()
    {
        await CheckAdminStatusAsync();
        await LoadAuditLogsAsync();
    }

    private async Task CheckAdminStatusAsync()
    {
        isAdmin = await AuditApi.IsAdminAsync();
    }

    private async Task LoadAuditLogsAsync()
    {
        isLoading = true;
        
        logs = await AuditApi.GetAuditLogsAsync(
            viewAll: viewAll,
            entityType: string.IsNullOrWhiteSpace(filterEntityType) ? null : filterEntityType,
            action: string.IsNullOrWhiteSpace(filterAction) ? null : filterAction,
            fromDate: filterFromDate,
            toDate: filterToDate);
        
        // Populate dynamic filter options from actual data
        if (logs != null)
        {
            availableEntityTypes = logs
                .Select(l => l.EntityType)
                .Where(et => !string.IsNullOrWhiteSpace(et))
                .Distinct()
                .OrderBy(et => GetEntityDisplayName(et))
                .ToList();
            
            availableActions = logs
                .Select(l => l.Action)
                .Where(a => !string.IsNullOrWhiteSpace(a))
                .Distinct()
                .OrderBy(a => a)
                .ToList();
        }
        
        isLoading = false;
        ApplyLocalFilters();
    }

    private async Task ApplyFilters()
    {
        await LoadAuditLogsAsync();
    }

    private void ApplyLocalFilters()
    {
        if (logs == null)
        {
            filteredLogs = Array.Empty<AuditLogDto>();
            return;
        }

        var result = logs.AsEnumerable();

        // Search filter (local only)
        if (!string.IsNullOrWhiteSpace(searchText))
        {
            var search = searchText.ToLower();
            result = result.Where(l =>
                l.Username.ToLower().Contains(search) ||
                l.EntityType.ToLower().Contains(search) ||
                GetEntityDisplayName(l.EntityType).ToLower().Contains(search) ||
                (l.EntityId?.ToString().Contains(search) ?? false)
            );
        }

        filteredLogs = result.ToArray();
        ApplySorting();
        currentPage = 1;
        UpdatePagination();
    }

    private void ClearFilters()
    {
        searchText = "";
        filterEntityType = "";
        filterAction = "";
        filterFromDate = null;
        filterToDate = null;
        _ = LoadAuditLogsAsync();
    }

    private void SortBy(string column)
    {
        if (sortColumn == column)
        {
            sortAscending = !sortAscending;
        }
        else
        {
            sortColumn = column;
            sortAscending = true;
        }
        ApplySorting();
        UpdatePagination();
    }

    private void ApplySorting()
    {
        filteredLogs = sortColumn switch
        {
            "Timestamp" => sortAscending 
                ? filteredLogs.OrderBy(l => l.Timestamp).ToArray()
                : filteredLogs.OrderByDescending(l => l.Timestamp).ToArray(),
            "Username" => sortAscending 
                ? filteredLogs.OrderBy(l => l.Username).ToArray()
                : filteredLogs.OrderByDescending(l => l.Username).ToArray(),
            "Action" => sortAscending 
                ? filteredLogs.OrderBy(l => l.Action).ToArray()
                : filteredLogs.OrderByDescending(l => l.Action).ToArray(),
            "EntityType" => sortAscending 
                ? filteredLogs.OrderBy(l => GetEntityDisplayName(l.EntityType)).ToArray()
                : filteredLogs.OrderByDescending(l => GetEntityDisplayName(l.EntityType)).ToArray(),
            _ => filteredLogs
        };
    }

    private string GetSortIcon(string column)
    {
        if (sortColumn != column) return "";
        return sortAscending ? "▲" : "▼";
    }

    private void UpdatePagination()
    {
        totalPages = (int)Math.Ceiling(filteredLogs.Length / (double)pageSize);
        if (totalPages == 0) totalPages = 1;
        if (currentPage > totalPages) currentPage = totalPages;
        
        var skip = (currentPage - 1) * pageSize;
        pagedLogs = filteredLogs.Skip(skip).Take(pageSize).ToArray();
    }

    private void GoToPage(int page)
    {
        if (page < 1 || page > totalPages) return;
        currentPage = page;
        UpdatePagination();
    }

    private string GetActionBadgeClass(string action)
    {
        return action?.ToLower() switch
        {
            "create" => "bg-success",
            "read" => "bg-secondary",
            "update" => "bg-primary",
            "delete" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetEntityDisplayName(string entityType)
    {
        return entityDisplayNames.TryGetValue(entityType, out var displayName) 
            ? displayName 
            : entityType;
    }

    private string GetEntityNavigationUrl(string entityType, int entityId)
    {
        return entityType switch
        {
            "Customer" => $"/customers?customerId={entityId}",
            "CustomerOrder" => $"/orders?orderId={entityId}",
            "Project" => $"/projects?projectId={entityId}",
            _ => "#"
        };
    }

    private void ViewSnapshot(AuditLogDto log)
    {
        selectedLog = log;
    }

    private void CloseSnapshot()
    {
        selectedLog = null;
    }

    private string FormatJson(string json)
    {
        try
        {
            using var doc = System.Text.Json.JsonDocument.Parse(json);
            return System.Text.Json.JsonSerializer.Serialize(doc, new System.Text.Json.JsonSerializerOptions 
            { 
                WriteIndented = true 
            });
        }
        catch
        {
            return json;
        }
    }
}
