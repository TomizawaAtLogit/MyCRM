@using System.ComponentModel.DataAnnotations
@inject CustomerApiClient CustomerApi
@inject ProjectsApiClient ProjectsApi
@inject NavigationManager Navigation

<div class="row mb-3">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center">
            <h5>Customer Projects</h5>
            <a href="/projects" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Add New Project
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @if (customerProjects == null)
        {
            <p><em>Loading projects...</em></p>
        }
        else if (customerProjects.Length == 0)
        {
            <p class="text-muted">No projects for this customer.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in customerProjects)
                        {
                            <tr>
                                <td>
                                    <a href="/projects" class="text-decoration-none">
                                        <strong>@p.Name</strong>
                                    </a>
                                    @if (!string.IsNullOrWhiteSpace(p.Description))
                                    {
                                        <div class="small text-muted">@p.Description</div>
                                    }
                                </td>
                                <td>
                                    @if (p.Status == ProjectStatus.Wip)
                                    {
                                        <span class="badge bg-primary">WIP</span>
                                    }
                                    else if (p.Status == ProjectStatus.Pending)
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else if (p.Status == ProjectStatus.Closed)
                                    {
                                        <span class="badge bg-secondary">Closed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark">@p.Status</span>
                                    }
                                </td>
                                <td class="small">@p.CreatedAt.ToLocalTime().ToString("g")</td>
                                <td>
                                    <a href="/projects" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-arrow-right-circle"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public int CustomerId { get; set; }

    [Parameter]
    public List<CustomerProjectActivityDto> ProjectActivities { get; set; } = new();

    [Parameter]
    public EventCallback OnRefresh { get; set; }

    private ProjectDto[]? customerProjects;

    protected override async Task OnInitializedAsync()
    {
        await LoadProjectsAsync();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadProjectsAsync();
    }

    private async Task LoadProjectsAsync()
    {
        customerProjects = await ProjectsApi.GetProjectsAsync(customerId: CustomerId);
    }
}
