@code {
    [Parameter, EditorRequired]
    public int CustomerId { get; set; }

    [Parameter]
    public List<SystemDto> Systems { get; set; } = new();

    [Parameter]
    public EventCallback OnRefresh { get; set; }

    // Toast notification
    private string? toastMessage;
    private bool toastIsError;
    private System.Threading.Timer? toastTimer;

    // Loading states
    private bool isAddingSystem;
    private bool isAddingComponent;
    private bool isEditingSystem;
    private bool isEditingComponent;
    private bool isDeletingSystem;
    private bool isDeletingComponent;

    // Form visibility
    private bool showAddSystemForm = false;
    private bool showAddComponentForm = false;

    // Form models
    private NewSystemModel newSystem = new();
    private NewComponentModel newComponent = new();
    private EditSystemModel editSystem = new();
    private EditComponentModel editComponent = new();
    
    private int selectedSystemId = 0;
    private int editingSystemId = 0;
    private int editingComponentSystemId = 0;
    private int editingComponentId = 0;

    private async Task CreateSystemAsync()
    {
        // Validate uniqueness
        if (Systems.Any(s => s.SystemName.Equals(newSystem.SystemName, StringComparison.OrdinalIgnoreCase)))
        {
            ShowToast("A system with this name already exists for this customer.", true);
            return;
        }

        isAddingSystem = true;
        try
        {
            var dto = new SystemCreateDto(
                newSystem.SystemName!,
                newSystem.InstallationDate,
                newSystem.Description);

            var result = await CustomerApi.AddNewSystemAsync(CustomerId, dto);
            if (result != null)
            {
                newSystem = new();
                await OnRefresh.InvokeAsync();
                ShowToast("System added successfully");
                showAddSystemForm = false;
            }
            else
            {
                ShowToast("Failed to add system: No response from server", true);
            }
        }
        catch (HttpRequestException ex)
        {
            ShowToast($"Network error: {ex.Message}", true);
        }
        catch (Exception ex)
        {
            ShowToast($"Error: {ex.Message}", true);
        }
        finally
        {
            isAddingSystem = false;
        }
    }

    private async Task CreateComponentAsync()
    {
        if (selectedSystemId == 0)
        {
            ShowToast("Please select a system first", true);
            return;
        }

        isAddingComponent = true;
        try
        {
            var dto = new SystemComponentCreateDto(
                newComponent.ComponentType!,
                newComponent.Manufacturer,
                newComponent.Model,
                newComponent.SerialNumber,
                newComponent.Location,
                newComponent.WarrantyExpiration,
                newComponent.Description);

            var result = await CustomerApi.AddSystemComponentAsync(CustomerId, selectedSystemId, dto);
            if (result != null)
            {
                newComponent = new();
                selectedSystemId = 0;
                await OnRefresh.InvokeAsync();
                ShowToast("Component added successfully");
                showAddComponentForm = false;
            }
            else
            {
                ShowToast("Failed to add component", true);
            }
        }
        catch (Exception ex)
        {
            ShowToast($"Error: {ex.Message}", true);
        }
        finally
        {
            isAddingComponent = false;
        }
    }

    private void SelectSystemForComponent(int systemId)
    {
        selectedSystemId = systemId;
    }

    private async Task StartEditSystem(SystemDto system)
    {
        editingSystemId = system.Id;
        editSystem = new EditSystemModel
        {
            SystemName = system.SystemName,
            InstallationDate = system.InstallationDate,
            Description = system.Description
        };
        await JSRuntime.InvokeVoidAsync("modalHelper.show", "editSystemModal");
    }

    private async Task UpdateSystemAsync()
    {
        isEditingSystem = true;
        try
        {
            var dto = new SystemDto(
                editingSystemId,
                CustomerId,
                editSystem.SystemName!,
                editSystem.InstallationDate,
                editSystem.Description,
                new List<SystemComponentDto>());

            var success = await CustomerApi.UpdateNewSystemAsync(CustomerId, editingSystemId, dto);
            if (success)
            {
                await JSRuntime.InvokeVoidAsync("modalHelper.hide", "editSystemModal");
                await OnRefresh.InvokeAsync();
                ShowToast("System updated successfully");
            }
            else
            {
                ShowToast("Failed to update system", true);
            }
        }
        catch (Exception ex)
        {
            ShowToast($"Error: {ex.Message}", true);
        }
        finally
        {
            isEditingSystem = false;
        }
    }

    private async Task DeleteSystemAsync(int systemId, string systemName, int componentCount)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
            $"Are you sure? This will delete '{systemName}' and all its {componentCount} component{(componentCount != 1 ? "s" : "")}.");
        
        if (!confirmed) return;

        isDeletingSystem = true;
        try
        {
            var success = await CustomerApi.DeleteNewSystemAsync(CustomerId, systemId);
            if (success)
            {
                await OnRefresh.InvokeAsync();
                ShowToast("System deleted successfully");
            }
            else
            {
                ShowToast("Failed to delete system", true);
            }
        }
        catch (Exception ex)
        {
            ShowToast($"Error: {ex.Message}", true);
        }
        finally
        {
            isDeletingSystem = false;
        }
    }

    private async Task StartEditComponent(int systemId, SystemComponentDto component)
    {
        editingComponentSystemId = systemId;
        editingComponentId = component.Id;
        editComponent = new EditComponentModel
        {
            ComponentType = component.ComponentType,
            Manufacturer = component.Manufacturer,
            Model = component.Model,
            SerialNumber = component.SerialNumber,
            Location = component.Location,
            WarrantyExpiration = component.WarrantyExpiration,
            Description = component.Description
        };
        await JSRuntime.InvokeVoidAsync("modalHelper.show", "editComponentModal");
    }

    private async Task UpdateComponentAsync()
    {
        isEditingComponent = true;
        try
        {
            var dto = new SystemComponentDto(
                editingComponentId,
                editingComponentSystemId,
                editComponent.ComponentType!,
                editComponent.Manufacturer,
                editComponent.Model,
                editComponent.SerialNumber,
                editComponent.Location,
                editComponent.WarrantyExpiration,
                editComponent.Description);

            var success = await CustomerApi.UpdateSystemComponentAsync(CustomerId, editingComponentSystemId, editingComponentId, dto);
            if (success)
            {
                await JSRuntime.InvokeVoidAsync("modalHelper.hide", "editComponentModal");
                await OnRefresh.InvokeAsync();
                ShowToast("Component updated successfully");
            }
            else
            {
                ShowToast("Failed to update component", true);
            }
        }
        catch (Exception ex)
        {
            ShowToast($"Error: {ex.Message}", true);
        }
        finally
        {
            isEditingComponent = false;
        }
    }

    private async Task DeleteComponentAsync(int systemId, int componentId)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Delete this component?");
        if (!confirmed) return;

        isDeletingComponent = true;
        try
        {
            var success = await CustomerApi.DeleteSystemComponentAsync(CustomerId, systemId, componentId);
            if (success)
            {
                await OnRefresh.InvokeAsync();
                ShowToast("Component deleted successfully");
            }
            else
            {
                ShowToast("Failed to delete component", true);
            }
        }
        catch (Exception ex)
        {
            ShowToast($"Error: {ex.Message}", true);
        }
        finally
        {
            isDeletingComponent = false;
        }
    }

    private void ShowToast(string message, bool isError = false)
    {
        toastMessage = message;
        toastIsError = isError;
        
        // Auto-dismiss after 3 seconds
        toastTimer?.Dispose();
        toastTimer = new System.Threading.Timer(_ =>
        {
            toastMessage = null;
            InvokeAsync(StateHasChanged);
        }, null, 3000, Timeout.Infinite);
    }

    private void DismissToast()
    {
        toastMessage = null;
        toastTimer?.Dispose();
    }

    public void Dispose()
    {
        toastTimer?.Dispose();
    }

    class NewSystemModel
    {
        [Required(ErrorMessage = "System name is required")]
        public string? SystemName { get; set; }
        public DateTime? InstallationDate { get; set; }
        public string? Description { get; set; }
    }

    class NewComponentModel
    {
        [Required(ErrorMessage = "Component type is required")]
        public string? ComponentType { get; set; }
        public string? Manufacturer { get; set; }
        public string? Model { get; set; }
        public string? SerialNumber { get; set; }
        public string? Location { get; set; }
        public DateTime? WarrantyExpiration { get; set; }
        public string? Description { get; set; }
    }

    class EditSystemModel
    {
        [Required(ErrorMessage = "System name is required")]
        public string? SystemName { get; set; }
        public DateTime? InstallationDate { get; set; }
        public string? Description { get; set; }
    }

    class EditComponentModel
    {
        [Required(ErrorMessage = "Component type is required")]
        public string? ComponentType { get; set; }
        public string? Manufacturer { get; set; }
        public string? Model { get; set; }
        public string? SerialNumber { get; set; }
        public string? Location { get; set; }
        public DateTime? WarrantyExpiration { get; set; }
        public string? Description { get; set; }
    }
}
