@using System.ComponentModel.DataAnnotations
@inject CustomerApiClient CustomerApi
@inject IJSRuntime JSRuntime

<!-- Toast Notification Container -->
@if (!string.IsNullOrEmpty(toastMessage))
{
    <div class="position-sticky top-0 mb-3" style="z-index: 1050;">
        <div class="alert @(toastIsError ? "alert-danger" : "alert-success") alert-dismissible fade show" role="alert">
            @toastMessage
            <button type="button" class="btn-close" @onclick="DismissToast"></button>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <h5>Systems</h5>
        @if (Systems == null || !Systems.Any())
        {
            <p class="text-muted">No systems configured.</p>
        }
        else
        {
            <div class="accordion" id="systemsAccordion">
                @foreach (var system in Systems)
                {
                    var accordionId = $"system-{system.Id}";
                    var componentCount = system.Components?.Count ?? 0;
                    var badgeClass = componentCount > 0 ? "bg-primary" : "bg-warning";
                    
                    <div class="accordion-item">
                        <h2 class="accordion-header d-flex align-items-center position-relative" id="heading-@system.Id" style="padding-right: 110px;">
                            <button class="accordion-button flex-grow-1" type="button" data-bs-toggle="collapse" 
                                    data-bs-target="#@accordionId" aria-expanded="true" aria-controls="@accordionId">
                                <span class="me-2">@system.SystemName</span>
                                <span class="badge @badgeClass me-2">@componentCount component@(componentCount != 1 ? "s" : "")</span>
                                @if (system.InstallationDate.HasValue)
                                {
                                    <small class="text-muted ms-2">Installed: @system.InstallationDate.Value.ToShortDateString()</small>
                                }
                            </button>
                            <div class="position-absolute end-0 top-50 translate-middle-y me-2" style="z-index: 1050;">
                                <button class="btn btn-sm btn-outline-primary me-1" 
                                        @onclick="() => StartEditSystem(system)"
                                        @onclick:stopPropagation="true"
                                        disabled="@isDeletingSystem">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" 
                                        @onclick="() => DeleteSystemAsync(system.Id, system.SystemName, componentCount)"
                                        @onclick:stopPropagation="true"
                                        disabled="@isDeletingSystem">
                                    @if (isDeletingSystem)
                                    {
                                        <span class="spinner-border spinner-border-sm"></span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-trash"></i>
                                    }
                                </button>
                            </div>
                        </h2>
                        <div id="@accordionId" class="accordion-collapse collapse show" 
                             aria-labelledby="heading-@system.Id" data-bs-parent="#systemsAccordion">
                            <div class="accordion-body">
                                @if (componentCount == 0)
                                {
                                    <div class="text-center py-3">
                                        <p class="text-muted mb-2">No components yet. Use the form on the right to add components.</p>
                                    </div>
                                }
                                else
                                {
                                    <div class="table-responsive">
                                        <table class="table table-sm table-hover mb-0">
                                            <thead>
                                                <tr>
                                                    <th>Component Type</th>
                                                    <th>Manufacturer</th>
                                                    <th>Model</th>
                                                    <th>Serial Number</th>
                                                    <th>Location</th>
                                                    <th>Warranty Expiration</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var component in system.Components!)
                                                {
                                                    <tr>
                                                        <td>@component.ComponentType</td>
                                                        <td>@component.Manufacturer</td>
                                                        <td>@component.Model</td>
                                                        <td>@component.SerialNumber</td>
                                                        <td>@component.Location</td>
                                                        <td>@(component.WarrantyExpiration?.ToShortDateString() ?? "-")</td>
                                                        <td>
                                                            <button class="btn btn-sm btn-outline-primary me-1" 
                                                                    @onclick="() => StartEditComponent(system.Id, component)"
                                                                    disabled="@isDeletingComponent">
                                                                <span class="bi bi-pencil"></span>
                                                            </button>
                                                            <button class="btn btn-sm btn-outline-danger" 
                                                                    @onclick="() => DeleteComponentAsync(system.Id, component.Id)"
                                                                    disabled="@isDeletingComponent">
                                                                @if (isDeletingComponent)
                                                                {
                                                                    <span class="spinner-border spinner-border-sm"></span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="bi bi-trash"></span>
                                                                }
                                                            </button>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<!-- Add System and Component Forms -->
<div class="row mt-3">
    <div class="col-md-12">
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Add System</h5>
                <button class="btn btn-sm btn-outline-primary" @onclick="() => showAddSystemForm = !showAddSystemForm">
                    <i class="bi @(showAddSystemForm ? "bi-chevron-up" : "bi-chevron-down")"></i>
                </button>
            </div>
            @if (showAddSystemForm)
            {
            <div class="card-body">
                <EditForm Model="newSystem" OnValidSubmit="CreateSystemAsync">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger" />
                    <div class="mb-2">
                        <label class="form-label">System Name</label>
                        <InputText @bind-Value="newSystem.SystemName" class="form-control form-control-sm" />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Installation Date</label>
                        <InputDate @bind-Value="newSystem.InstallationDate" class="form-control form-control-sm" />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Description</label>
                        <InputTextArea @bind-Value="newSystem.Description" class="form-control form-control-sm" rows="2" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm w-100" disabled="@isAddingSystem">
                        @if (isAddingSystem)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Add System
                    </button>
                </EditForm>
                </div>
            }
        </div>
        
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Add Component</h5>
                <button class="btn btn-sm btn-outline-primary" @onclick="() => showAddComponentForm = !showAddComponentForm">
                    <i class="bi @(showAddComponentForm ? "bi-chevron-up" : "bi-chevron-down")"></i>
                </button>
            </div>
            @if (showAddComponentForm)
            {
                <div class="card-body">
                @if (Systems == null || !Systems.Any())
                {
                    <p class="text-muted small">Add a system first</p>
                }
                else
                {
                    <EditForm Model="newComponent" OnValidSubmit="CreateComponentAsync">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />
                        <div class="mb-2">
                            <label class="form-label">Select System</label>
                            <InputSelect @bind-Value="selectedSystemId" class="form-control form-control-sm">
                                <option value="0">Select a system...</option>
                                @foreach (var system in Systems)
                                {
                                    <option value="@system.Id">@system.SystemName</option>
                                }
                            </InputSelect>
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Component Type</label>
                            <InputText @bind-Value="newComponent.ComponentType" class="form-control form-control-sm" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Manufacturer</label>
                            <InputText @bind-Value="newComponent.Manufacturer" class="form-control form-control-sm" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Model</label>
                            <InputText @bind-Value="newComponent.Model" class="form-control form-control-sm" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Serial Number</label>
                            <InputText @bind-Value="newComponent.SerialNumber" class="form-control form-control-sm" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Location</label>
                            <InputText @bind-Value="newComponent.Location" class="form-control form-control-sm" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Warranty Expiration</label>
                            <InputDate @bind-Value="newComponent.WarrantyExpiration" class="form-control form-control-sm" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Description</label>
                            <InputTextArea @bind-Value="newComponent.Description" class="form-control form-control-sm" rows="2" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-sm w-100" disabled="@(isAddingComponent || selectedSystemId == 0)">
                            @if (isAddingComponent)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            Add Component
                        </button>
                    </EditForm>
                }
                </div>
            }
        </div>
    </div>
</div>

<!-- Edit System Modal -->
<div class="modal fade" id="editSystemModal" tabindex="-1" aria-labelledby="editSystemModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editSystemModalLabel">Edit System</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="editSystem" OnValidSubmit="UpdateSystemAsync">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger" />
                    <div class="mb-3">
                        <label class="form-label">System Name</label>
                        <InputText @bind-Value="editSystem.SystemName" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Installation Date</label>
                        <InputDate @bind-Value="editSystem.InstallationDate" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <InputTextArea @bind-Value="editSystem.Description" class="form-control" rows="3" />
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary" disabled="@isEditingSystem">
                            @if (isEditingSystem)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            Save Changes
                        </button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

