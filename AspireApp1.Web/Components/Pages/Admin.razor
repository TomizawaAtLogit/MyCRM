    // Page Permissions management
    private void ShowPagePermissionsModal(RoleDto role)
    {
        managingPermissionsRole = role;
        // Parse existing permissions (format: "Page:Level,Page:Level,...")
        pagePermissions = new Dictionary<string, string>();
        if (!string.IsNullOrEmpty(role.PagePermissions))
        {
            var permissions = role.PagePermissions.Split(',', StringSplitOptions.RemoveEmptyEntries);
            foreach (var perm in permissions)
            {
                var parts = perm.Trim().Split(':');
                if (parts.Length == 2)
                {
                    pagePermissions[parts[0].Trim()] = parts[1].Trim();
                }
            }
        }
        // Ensure all pages have an entry (default to None)
        foreach (var page in availablePages)
        {
            if (!pagePermissions.ContainsKey(page))
            {
                pagePermissions[page] = "None";
            }
        }
        showPagePermissionsModal = true;
    }

