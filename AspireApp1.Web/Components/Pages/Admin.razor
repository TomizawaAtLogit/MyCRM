    private async Task SavePagePermissions()
    {
        if (managingPermissionsRole == null) return;

        savingPermissions = true;
        StateHasChanged();

        try
        {
            // Create permission string in format "Page:Level,Page:Level,..."
            var permissionString = string.Join(",", 
                pagePermissions
                    .Where(p => p.Value != "None") // Only include non-None permissions
                    .OrderBy(p => p.Key)
                    .Select(p => $"{p.Key}:{p.Value}"));

            // Create updated role with new permissions
            var updatedRole = new RoleDto(
                managingPermissionsRole.Id,
                managingPermissionsRole.Name,
                managingPermissionsRole.Description,
                permissionString
            );

            var success = await AdminApi.UpdateRoleAsync(managingPermissionsRole.Id, updatedRole);

            if (success)
            {
                ShowToast("Success", "Page permissions updated successfully", "success", 3000);
                await LoadRoles();
                HidePagePermissionsModal();
            }
            else
            {
                ShowToast("Error", "Failed to update page permissions", "danger", 5000);
            }
        }
        catch (Exception ex)
        {
            ShowToast("Error", $"An error occurred: {ex.Message}", "danger", 5000);
        }
        finally
        {
            savingPermissions = false;
            StateHasChanged();
        }
    }

