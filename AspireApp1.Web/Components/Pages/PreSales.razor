@page "/presales"
@rendermode InteractiveServer
@inject PreSalesProposalsApiClient ProposalsApi
@inject PreSalesActivitiesApiClient ActivitiesApi
@inject RequirementDefinitionsApiClient RequirementsApi
@inject CustomerApiClient CustomersApi
@inject AdminApiClient AdminApi
@inject IJSRuntime JSRuntime
@inject LocalizationService Localizer
@using AspireApp1.Web
@using AspireApp1.Web.Services
@using System.ComponentModel.DataAnnotations

<PageTitle>@Localizer.GetString("Pre-sales Proposals")</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">@Localizer.GetString("Pre-sales Proposals")</h1>
    <button class="btn btn-primary" @onclick="ShowCreateModal">
        <i class="bi bi-plus-circle me-2"></i>@Localizer.GetString("Create Proposal")
    </button>
</div>

@if (showToast && !string.IsNullOrEmpty(toastMessage))
{
    <div class="alert @(toastType == "success" ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
        @toastMessage
        <button type="button" class="btn-close" @onclick="() => showToast = false"></button>
    </div>
}

<div class="row mb-3">
    <div class="col-md-3">
        <label class="form-label">@Localizer.GetString("Customer")</label>
        <select class="form-select" value="@filterCustomerId" @onchange="OnCustomerFilterChanged">
            <option value="">@Localizer.GetString("All Customers")</option>
            @if (customers != null)
            {
                @foreach (var customer in customers)
                {
                    <option value="@customer.Id">@customer.Name</option>
                }
            }
        </select>
    </div>
    <div class="col-md-3">
        <label class="form-label">@Localizer.GetString("Status")</label>
        <select class="form-select" value="@filterStatus" @onchange="OnStatusFilterChanged">
            <option value="">@Localizer.GetString("All Statuses")</option>
            <option value="Draft">@GetStatusLabel(PreSalesStatus.Draft)</option>
            <option value="InReview">@GetStatusLabel(PreSalesStatus.InReview)</option>
            <option value="Pending">@GetStatusLabel(PreSalesStatus.Pending)</option>
            <option value="Approved">@GetStatusLabel(PreSalesStatus.Approved)</option>
            <option value="Rejected">@GetStatusLabel(PreSalesStatus.Rejected)</option>
            <option value="Closed">@GetStatusLabel(PreSalesStatus.Closed)</option>
        </select>
    </div>
    <div class="col-md-3">
        <label class="form-label">@Localizer.GetString("Stage")</label>
        <select class="form-select" value="@filterStage" @onchange="OnStageFilterChanged">
            <option value="">@Localizer.GetString("All Stages")</option>
            <option value="InitialContact">@GetStageLabel(PreSalesStage.InitialContact)</option>
            <option value="RequirementGathering">@GetStageLabel(PreSalesStage.RequirementGathering)</option>
            <option value="ProposalDevelopment">@GetStageLabel(PreSalesStage.ProposalDevelopment)</option>
            <option value="PresentationScheduled">@GetStageLabel(PreSalesStage.PresentationScheduled)</option>
            <option value="NegotiationInProgress">@GetStageLabel(PreSalesStage.NegotiationInProgress)</option>
            <option value="AwaitingDecision">@GetStageLabel(PreSalesStage.AwaitingDecision)</option>
            <option value="Won">@GetStageLabel(PreSalesStage.Won)</option>
            <option value="Lost">@GetStageLabel(PreSalesStage.Lost)</option>
        </select>
    </div>
    <div class="col-md-3">
        <label class="form-label">@Localizer.GetString("Assigned To")</label>
        <select class="form-select" value="@filterAssignedToUserId" @onchange="OnAssignedToFilterChanged">
            <option value="">@Localizer.GetString("All Users")</option>
            @if (users != null)
            {
                @foreach (var user in users.Where(u => u.IsActive))
                {
                    <option value="@user.Id">@user.DisplayName</option>
                }
            }
        </select>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">@Localizer.GetString("Loading...")</span>
        </div>
    </div>
}
else if (filteredProposals != null && filteredProposals.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="text-center" style="width: 48px;"></th>
                    <th>@Localizer.GetString("Title")</th>
                    <th>@Localizer.GetString("Customer")</th>
                    <th>@Localizer.GetString("Status")</th>
                    <th>@Localizer.GetString("Stage")</th>
                    <th>@Localizer.GetString("Assigned To")</th>
                    <th>@Localizer.GetString("Estimated Value")</th>
                    <th>@Localizer.GetString("Probability")</th>
                    <th>@Localizer.GetString("Expected Close")</th>
                    <th>@Localizer.GetString("Actions")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var proposal in filteredProposals)
                {
                    <tr>
                        <td class="text-center align-middle">
                            <button class="btn btn-link btn-chevron" @onclick="() => ToggleProposalExpansionAsync(proposal.Id)" type="button" aria-label="@Localizer.GetString("Activities")">
                                <i class="bi @(expandedProposals.ContainsKey(proposal.Id) && expandedProposals[proposal.Id] ? "bi-chevron-down" : "bi-chevron-right")"></i>
                            </button>
                        </td>
                        <td>
                            <strong>@proposal.Title</strong>
                            @if (!string.IsNullOrWhiteSpace(proposal.Description))
                            {
                                var description = proposal.Description;
                                var isExpanded = proposalDescriptionExpanded.TryGetValue(proposal.Id, out var expanded) && expanded;
                                var needsToggle = description.Length > 120;
                                <div class="small text-muted mt-1">
                                    <span>@(isExpanded || !needsToggle ? description : Truncate(description, 120))</span>
                                    @if (needsToggle)
                                    {
                                        <button type="button" class="btn btn-link btn-sm p-0 ms-2" @onclick="() => ToggleProposalDescription(proposal.Id)">
                                            @(isExpanded ? Localizer.GetString("Hide") : Localizer.GetString("View"))
                                        </button>
                                    }
                                </div>
                            }
                        </td>
                        <td>@proposal.CustomerName</td>
                        <td><span class="badge bg-@GetStatusBadgeColor(proposal.Status)">@GetStatusLabel(proposal.Status)</span></td>
                        <td><span class="badge bg-secondary">@GetStageLabel(proposal.Stage)</span></td>
                        <td>@proposal.AssignedToUserName</td>
                        <td>@(proposal.EstimatedValue?.ToString("C") ?? "-")</td>
                        <td>@(proposal.ProbabilityPercentage?.ToString() + "%" ?? "-")</td>
                        <td>@(proposal.ExpectedCloseDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" type="button" @onclick="() => ShowEditModal(proposal)" aria-label="@Localizer.GetString("Edit Proposal")">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-info" type="button" @onclick="() => ShowDetailsModal(proposal)" aria-label="@Localizer.GetString("View Proposal Details")">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger" type="button" @onclick="() => DeleteProposal(proposal.Id)" aria-label="@Localizer.GetString("Delete Proposal")">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                    @if (expandedProposals.ContainsKey(proposal.Id) && expandedProposals[proposal.Id])
                    {
                        <tr>
                            <td colspan="10" class="p-0 border-top-0">
                                <div class="bg-light border-top px-4 py-3">
                                    <ul class="nav nav-tabs mb-3" role="tablist">
                                        <li class="nav-item" role="presentation">
                                                <button class="nav-link @(GetProposalTab(proposal.Id) == "activities" ? "active" : "")"
                                                    type="button"
                                                    @onclick='@(() => SetProposalTab(proposal.Id, "activities"))'
                                                    role="tab">
                                                <span class="bi bi-calendar-event"></span> @Localizer.GetString("Activities")
                                            </button>
                                        </li>
                                        <li class="nav-item" role="presentation">
                                                <button class="nav-link @(GetProposalTab(proposal.Id) == "files" ? "active" : "")"
                                                    type="button"
                                                    @onclick='@(() => SetProposalTab(proposal.Id, "files"))'
                                                    role="tab">
                                                <span class="bi bi-file-earmark-arrow-up"></span> @Localizer.GetString("Files")
                                            </button>
                                        </li>
                                    </ul>
                                    @if (GetProposalTab(proposal.Id) == "activities")
                                    {
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <h6 class="mb-0">@Localizer.GetString("Activities")</h6>
                                            <button class="btn btn-sm btn-primary" type="button" @onclick="async () => await ShowAddActivityFormAsync(proposal.Id)">
                                                <i class="bi bi-plus-circle me-1" aria-hidden="true"></i>@Localizer.GetString("Add New Activity")
                                            </button>
                                        </div>
                                    @if (showAddActivityForm.TryGetValue(proposal.Id, out var showActivityForm) && showActivityForm && newActivityModels.ContainsKey(proposal.Id) && activityCreateContexts.ContainsKey(proposal.Id))
                                    {
                                        var model = newActivityModels[proposal.Id];
                                        var context = activityCreateContexts[proposal.Id];
                                        var isEditingActivity = editingActivityIds.TryGetValue(proposal.Id, out var editingId) && editingId.HasValue;
                                        var isProcessing = isProcessingActivity.TryGetValue(proposal.Id, out var processing) && processing;
                                        <div class="card mb-3">
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0">@Localizer.GetString(isEditingActivity ? "Edit Activity" : "New Activity")</h6>
                                                <button class="btn btn-sm btn-secondary" type="button" @onclick="() => CancelActivityEdit(proposal.Id)">@Localizer.GetString("Cancel")</button>
                                            </div>
                                            <div class="card-body">
                                                <EditForm EditContext="context" OnValidSubmit="async () => await SubmitActivityFormAsync(proposal.Id)">
                                                    <DataAnnotationsValidator />
                                                    <ValidationSummary />
                                                    <div class="row">
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label">@Localizer.GetString("Activity Date") *</label>
                                                            <InputDate class="form-control" @bind-Value="model.ActivityDate" />
                                                            <ValidationMessage For="() => model.ActivityDate" />
                                                        </div>
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label">@Localizer.GetString("Summary") *</label>
                                                            <InputText class="form-control" @bind-Value="model.Summary" />
                                                            <ValidationMessage For="() => model.Summary" />
                                                        </div>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">@Localizer.GetString("Description")</label>
                                                        <InputTextArea class="form-control" rows="3" @bind-Value="model.Description" />
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label">@Localizer.GetString("Next Action")</label>
                                                            <InputText class="form-control" @bind-Value="model.NextAction" />
                                                        </div>
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label">@Localizer.GetString("Performed By")</label>
                                                            <InputSelect TValue="string?" class="form-select" @bind-Value="model.PerformedBy">
                                                                @if (users != null)
                                                                {
                                                                    @foreach (var user in users.Where(u => u.IsActive))
                                                                    {
                                                                        <option value="@user.DisplayName">@user.DisplayName</option>
                                                                    }
                                                                }
                                                            </InputSelect>
                                                            <ValidationMessage For="() => model.PerformedBy" />
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6 offset-md-6 mb-3">
                                                            <label class="form-label">&nbsp;</label>
                                                            <button class="btn btn-primary w-100" type="submit" disabled="@isProcessing">
                                                                @if (isProcessing)
                                                                {
                                                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>@Localizer.GetString(isEditingActivity ? "Saving..." : "Creating...")
                                                                }
                                                                else
                                                                {
                                                                    @if (isEditingActivity)
                                                                    {
                                                                        <i class="bi bi-pencil me-1" aria-hidden="true"></i>@Localizer.GetString("Save Activity")
                                                                    }
                                                                    else
                                                                    {
                                                                        <i class="bi bi-plus-circle me-1" aria-hidden="true"></i>@Localizer.GetString("Create Activity")
                                                                    }
                                                                }
                                                            </button>
                                                        </div>
                                                    </div>
                                                </EditForm>
                                            </div>
                                        </div>
                                    }
                                    @if (IsProposalLoadingActivities(proposal.Id))
                                    {
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="spinner-border spinner-border-sm" role="status">
                                                <span class="visually-hidden">@Localizer.GetString("Loading...")</span>
                                            </div>
                                            <span>@Localizer.GetString("Loading activities...")</span>
                                        </div>
                                    }
                                    else if (cachedProposalActivities.TryGetValue(proposal.Id, out var inlineActivities) && inlineActivities.Any())
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-sm table-hover mb-0">
                                                <thead>
                                                    <tr>
                                                        <th>@Localizer.GetString("Date")</th>
                                                        <th>@Localizer.GetString("Summary")</th>
                                                        <th>@Localizer.GetString("Description")</th>
                                                        <th>@Localizer.GetString("Next Action")</th>
                                                        <th>@Localizer.GetString("Performed By")</th>
                                                        <th>@Localizer.GetString("Actions")</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var activity in inlineActivities)
                                                    {
                                                        <tr>
                                                            <td class="small">@activity.ActivityDate.ToLocalTime().ToString("g")</td>
                                                            <td>@activity.Summary</td>
                                                            <td class="small text-break">@(string.IsNullOrWhiteSpace(activity.Description) ? "-" : activity.Description)</td>
                                                            <td class="small">@(string.IsNullOrWhiteSpace(activity.NextAction) ? "-" : activity.NextAction)</td>
                                                            <td class="small">@(string.IsNullOrWhiteSpace(activity.PerformedBy) ? "-" : activity.PerformedBy)</td>
                                                            <td>
                                                                <button class="btn btn-sm btn-outline-primary me-1" type="button" @onclick="async () => await StartEditActivity(proposal.Id, activity)">
                                                                    <i class="bi bi-pencil"></i>
                                                                </button>
                                                                <button class="btn btn-sm btn-outline-danger" type="button" @onclick="async () => await DeleteActivityAsync(proposal.Id, activity.Id)">
                                                                    <i class="bi bi-trash"></i>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted mb-0">@Localizer.GetString("No activities yet.")</p>
                                    }
                            }
                            else if (GetProposalTab(proposal.Id) == "files")
                            {
                                <FileManager EntityType="PreSalesProposal" EntityId="@proposal.Id" />
                            }
                        }
                        </div>
                    </td>
                </tr>
                    }
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        @Localizer.GetString("No proposals found. Create one to get started!")
    </div>
}

@* Create/Edit Modal *@
@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(editingProposal.Id == 0 ? Localizer.GetString("Create Proposal") : Localizer.GetString("Edit Proposal"))</h5>
                    <button type="button" class="btn-close" @onclick="HideModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="editingProposal" OnValidSubmit="SaveProposal">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">@Localizer.GetString("Title") *</label>
                            <InputText class="form-control" @bind-Value="editingProposal.Title" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@Localizer.GetString("Description")</label>
                            <InputTextArea class="form-control" rows="3" @bind-Value="editingProposal.Description" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">@Localizer.GetString("Customer") *</label>
                                <InputSelect class="form-select" @bind-Value="editingProposal.CustomerId">
                                    <option value="0">-- @Localizer.GetString("Customer") --</option>
                                    @if (customers != null)
                                    {
                                        @foreach (var customer in customers)
                                        {
                                            <option value="@customer.Id">@customer.Name</option>
                                        }
                                    }
                                </InputSelect>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">@Localizer.GetString("Requirement Definition")</label>
                                <InputSelect class="form-select" @bind-Value="editingProposal.RequirementDefinitionId">
                                    <option value="">-- @Localizer.GetString("Requirement Definition") --</option>
                                    @if (requirements != null)
                                    {
                                        @foreach (var requirement in requirements)
                                        {
                                            <option value="@requirement.Id">@requirement.Title</option>
                                        }
                                    }
                                </InputSelect>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">@Localizer.GetString("Status")</label>
                                <InputSelect class="form-select" @bind-Value="editingProposal.Status">
                                    <option value="@PreSalesStatus.Draft">@GetStatusLabel(PreSalesStatus.Draft)</option>
                                    <option value="@PreSalesStatus.InReview">@GetStatusLabel(PreSalesStatus.InReview)</option>
                                    <option value="@PreSalesStatus.Pending">@GetStatusLabel(PreSalesStatus.Pending)</option>
                                    <option value="@PreSalesStatus.Approved">@GetStatusLabel(PreSalesStatus.Approved)</option>
                                    <option value="@PreSalesStatus.Rejected">@GetStatusLabel(PreSalesStatus.Rejected)</option>
                                    <option value="@PreSalesStatus.Closed">@GetStatusLabel(PreSalesStatus.Closed)</option>
                                </InputSelect>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">@Localizer.GetString("Stage")</label>
                                <InputSelect class="form-select" @bind-Value="editingProposal.Stage">
                                    <option value="@PreSalesStage.InitialContact">@GetStageLabel(PreSalesStage.InitialContact)</option>
                                    <option value="@PreSalesStage.RequirementGathering">@GetStageLabel(PreSalesStage.RequirementGathering)</option>
                                    <option value="@PreSalesStage.ProposalDevelopment">@GetStageLabel(PreSalesStage.ProposalDevelopment)</option>
                                    <option value="@PreSalesStage.PresentationScheduled">@GetStageLabel(PreSalesStage.PresentationScheduled)</option>
                                    <option value="@PreSalesStage.NegotiationInProgress">@GetStageLabel(PreSalesStage.NegotiationInProgress)</option>
                                    <option value="@PreSalesStage.AwaitingDecision">@GetStageLabel(PreSalesStage.AwaitingDecision)</option>
                                    <option value="@PreSalesStage.Won">@GetStageLabel(PreSalesStage.Won)</option>
                                    <option value="@PreSalesStage.Lost">@GetStageLabel(PreSalesStage.Lost)</option>
                                </InputSelect>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">@Localizer.GetString("Assigned To")</label>
                                <InputSelect TValue="int?" class="form-select" @bind-Value="editingProposal.AssignedToUserId">
                                    <option value="">-- @Localizer.GetString("Unassigned") --</option>
                                    @if (users != null)
                                    {
                                        @foreach (var user in users.Where(u => u.IsActive))
                                        {
                                            <option value="@user.Id">@user.DisplayName</option>
                                        }
                                    }
                                </InputSelect>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">@Localizer.GetString("Expected Close Date")</label>
                                <InputDate class="form-control" @bind-Value="editingProposal.ExpectedCloseDate" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">@Localizer.GetString("Estimated Value")</label>
                                <InputNumber class="form-control" @bind-Value="editingProposal.EstimatedValue" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">@Localizer.GetString("Probability (%)")</label>
                                <InputNumber class="form-control" @bind-Value="editingProposal.ProbabilityPercentage" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@Localizer.GetString("Notes")</label>
                            <InputTextArea class="form-control" rows="3" @bind-Value="editingProposal.Notes" />
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="HideModal">@Localizer.GetString("Cancel")</button>
                            <button type="submit" class="btn btn-primary">
                                @(editingProposal.Id == 0 ? Localizer.GetString("Create Proposal") : Localizer.GetString("Save Proposal"))
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@* Details Modal *@
@if (showDetailsModal && selectedProposal != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Localizer.GetString("Proposal Details") - @selectedProposal.Title</h5>
                    <button type="button" class="btn-close" @onclick="HideDetailsModal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Localizer.GetString("ID"):</dt>
                                <dd class="col-sm-8">@selectedProposal.Id</dd>

                                <dt class="col-sm-4">@Localizer.GetString("Customer"):</dt>
                                <dd class="col-sm-8">@selectedProposal.CustomerName</dd>

                                <dt class="col-sm-4">@Localizer.GetString("Status"):</dt>
                                <dd class="col-sm-8"><span class="badge bg-@GetStatusBadgeColor(selectedProposal.Status)">@GetStatusLabel(selectedProposal.Status)</span></dd>

                                <dt class="col-sm-4">@Localizer.GetString("Stage"):</dt>
                                <dd class="col-sm-8"><span class="badge bg-secondary">@GetStageLabel(selectedProposal.Stage)</span></dd>

                                <dt class="col-sm-4">@Localizer.GetString("Assigned To"):</dt>
                                <dd class="col-sm-8">@(selectedProposal.AssignedToUserName ?? Localizer.GetString("Unassigned"))</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">@Localizer.GetString("Estimated Value"):</dt>
                                <dd class="col-sm-7">@(selectedProposal.EstimatedValue?.ToString("C") ?? "-")</dd>

                                <dt class="col-sm-5">@Localizer.GetString("Probability"):</dt>
                                <dd class="col-sm-7">@(selectedProposal.ProbabilityPercentage?.ToString() + "%" ?? "-")</dd>

                                <dt class="col-sm-5">@Localizer.GetString("Expected Close"):</dt>
                                <dd class="col-sm-7">@(selectedProposal.ExpectedCloseDate?.ToString("yyyy-MM-dd") ?? "-")</dd>

                                <dt class="col-sm-5">@Localizer.GetString("Created"):</dt>
                                <dd class="col-sm-7">@selectedProposal.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                                <dt class="col-sm-5">@Localizer.GetString("Updated"):</dt>
                                <dd class="col-sm-7">@(selectedProposal.UpdatedAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(selectedProposal.Description))
                    {
                        <div class="mt-3">
                            <h6>@Localizer.GetString("Description"):</h6>
                            <p>@selectedProposal.Description</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(selectedProposal.Notes))
                    {
                        <div class="mt-3">
                            <h6>@Localizer.GetString("Notes"):</h6>
                            <p>@selectedProposal.Notes</p>
                        </div>
                    }

                    <div class="mt-4">
                        <h6>@Localizer.GetString("Activities")</h6>
                        @if (proposalActivities != null && proposalActivities.Any())
                        {
                            <div class="list-group">
                                @foreach (var activity in proposalActivities)
                                {
                                    <div class="list-group-item d-flex align-items-start justify-content-between">
                                        <div class="flex-grow-1">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h6 class="mb-1">@activity.Summary</h6>
                                                <small>@activity.ActivityDate.ToString("yyyy-MM-dd HH:mm")</small>
                                            </div>
                                            @if (!string.IsNullOrEmpty(activity.Description))
                                            {
                                                <p class="mb-1">@activity.Description</p>
                                            }
                                            <small>@activity.ActivityType - @activity.PerformedBy</small>
                                        </div>
                                        <span class="text-muted ms-3 d-flex align-items-center">
                                            <i class="bi bi-chevron-right" aria-hidden="true"></i>
                                            <span class="visually-hidden">@Localizer.GetString("Read Activity Details")</span>
                                        </span>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">@Localizer.GetString("No activities yet.")</p>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDetailsModal">@Localizer.GetString("Close")</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private PreSalesProposalDto[]? proposals;
    private PreSalesProposalDto[]? filteredProposals;
    private CustomerDto[]? customers;
    private UserDto[]? users;
    private RequirementDefinitionDto[]? requirements;
    private PreSalesActivityDto[]? proposalActivities;
    
    private bool isLoading = true;
    private bool showModal = false;
    private bool showDetailsModal = false;
    private bool showToast = false;
    private string toastMessage = "";
    private string toastType = "success";
    
    private PreSalesProposalEditModel editingProposal = new();
    private PreSalesProposalDto? selectedProposal;
    
    private string? filterCustomerId = "";
    private string? filterStatus = "";
    private string? filterStage = "";
    private string? filterAssignedToUserId = "";
    private readonly Dictionary<int, bool> expandedProposals = new();
    private readonly Dictionary<int, bool> proposalDescriptionExpanded = new();
    private readonly Dictionary<int, string> proposalActiveTabs = new();
    private readonly Dictionary<int, bool> loadingProposalActivities = new();
    private readonly Dictionary<int, PreSalesActivityDto[]> cachedProposalActivities = new();
    private readonly Dictionary<int, bool> showAddActivityForm = new();
    private readonly Dictionary<int, NewProposalActivityModel> newActivityModels = new();
    private readonly Dictionary<int, EditContext> activityCreateContexts = new();
    private readonly Dictionary<int, bool> isProcessingActivity = new();
    private readonly Dictionary<int, int?> editingActivityIds = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        
        proposals = await ProposalsApi.GetProposalsAsync();
        customers = await CustomersApi.GetCustomersAsync();
        users = await AdminApi.GetUsersAsync();
        requirements = await RequirementsApi.GetRequirementDefinitionsAsync();
        
        ApplyFilters();
        isLoading = false;
    }

    private void ApplyFilters()
    {
        filteredProposals = proposals;
        
        if (!string.IsNullOrEmpty(filterCustomerId) && int.TryParse(filterCustomerId, out var custId))
        {
            filteredProposals = filteredProposals?.Where(p => p.CustomerId == custId).ToArray();
        }
        
        if (!string.IsNullOrEmpty(filterStatus) && Enum.TryParse<PreSalesStatus>(filterStatus, out var status))
        {
            filteredProposals = filteredProposals?.Where(p => p.Status == status).ToArray();
        }
        
        if (!string.IsNullOrEmpty(filterStage) && Enum.TryParse<PreSalesStage>(filterStage, out var stage))
        {
            filteredProposals = filteredProposals?.Where(p => p.Stage == stage).ToArray();
        }
        
        if (!string.IsNullOrEmpty(filterAssignedToUserId) && int.TryParse(filterAssignedToUserId, out var userId))
        {
            filteredProposals = filteredProposals?.Where(p => p.AssignedToUserId == userId).ToArray();
        }
    }

    private void OnCustomerFilterChanged(ChangeEventArgs e)
    {
        filterCustomerId = e.Value?.ToString();
        ApplyFilters();
    }

    private void OnStatusFilterChanged(ChangeEventArgs e)
    {
        filterStatus = e.Value?.ToString();
        ApplyFilters();
    }

    private void OnStageFilterChanged(ChangeEventArgs e)
    {
        filterStage = e.Value?.ToString();
        ApplyFilters();
    }

    private void OnAssignedToFilterChanged(ChangeEventArgs e)
    {
        filterAssignedToUserId = e.Value?.ToString();
        ApplyFilters();
    }

    private void ShowCreateModal()
    {
        editingProposal = new PreSalesProposalEditModel();
        showModal = true;
    }

    private void ShowEditModal(PreSalesProposalDto proposal)
    {
        editingProposal = new PreSalesProposalEditModel
        {
            Id = proposal.Id,
            Title = proposal.Title,
            Description = proposal.Description,
            CustomerId = proposal.CustomerId,
            RequirementDefinitionId = proposal.RequirementDefinitionId,
            Status = proposal.Status,
            Stage = proposal.Stage,
            AssignedToUserId = proposal.AssignedToUserId,
            EstimatedValue = proposal.EstimatedValue,
            ProbabilityPercentage = proposal.ProbabilityPercentage,
            ExpectedCloseDate = proposal.ExpectedCloseDate,
            Notes = proposal.Notes
        };
        showModal = true;
    }

    private async Task ShowDetailsModal(PreSalesProposalDto proposal)
    {
        selectedProposal = proposal;
        proposalActivities = await LoadActivitiesIfNeededAsync(proposal.Id, forceRefresh: true);
        showDetailsModal = true;
    }

    private async Task ToggleProposalExpansionAsync(int proposalId)
    {
        var isExpanded = expandedProposals.TryGetValue(proposalId, out var expanded) && expanded;
        expandedProposals[proposalId] = !isExpanded;

        if (!proposalActiveTabs.ContainsKey(proposalId))
        {
            proposalActiveTabs[proposalId] = "activities";
        }

        if (expandedProposals[proposalId])
        {
            await LoadActivitiesIfNeededAsync(proposalId);
        }
    }

    private async Task StartEditActivity(int proposalId, PreSalesActivityDto activity)
    {
        EnsureActivityModel(proposalId);
        newActivityModels[proposalId] = new NewProposalActivityModel
        {
            ActivityDate = activity.ActivityDate,
            Summary = activity.Summary,
            Description = activity.Description,
            NextAction = activity.NextAction,
            ActivityType = activity.ActivityType,
            PerformedBy = activity.PerformedBy
        };
        activityCreateContexts[proposalId] = new EditContext(newActivityModels[proposalId]);
        editingActivityIds[proposalId] = activity.Id;
        showAddActivityForm[proposalId] = true;
        await InvokeAsync(StateHasChanged);
    }

    private void CancelActivityEdit(int proposalId)
    {
        editingActivityIds[proposalId] = null;
        showAddActivityForm[proposalId] = false;
        ResetActivityModel(proposalId);
    }

    private async Task DeleteActivityAsync(int proposalId, int activityId)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", Localizer.GetString("Confirm Delete Activity")))
        {
            return;
        }

        var success = await ActivitiesApi.DeleteActivityAsync(activityId);
        if (success)
        {
            ShowToast(Localizer.GetString("Activity deleted successfully"), "success");
            if (editingActivityIds.TryGetValue(proposalId, out var editingId) && editingId == activityId)
            {
                editingActivityIds[proposalId] = null;
                showAddActivityForm[proposalId] = false;
                ResetActivityModel(proposalId);
            }
            var refreshed = await LoadActivitiesIfNeededAsync(proposalId, forceRefresh: true);
            if (selectedProposal?.Id == proposalId)
            {
                proposalActivities = refreshed;
            }
        }
        else
        {
            ShowToast(Localizer.GetString("Error deleting activity"), "danger");
        }
    }


    private async Task ShowAddActivityFormAsync(int proposalId)
    {
        EnsureActivityModel(proposalId);
        editingActivityIds[proposalId] = null;
        showAddActivityForm[proposalId] = true;
        await InvokeAsync(StateHasChanged);
    }

    private void HideAddActivityForm(int proposalId)
    {
        showAddActivityForm[proposalId] = false;
        editingActivityIds[proposalId] = null;
    }

    private void EnsureActivityModel(int proposalId)
    {
        if (!newActivityModels.ContainsKey(proposalId))
        {
            newActivityModels[proposalId] = new NewProposalActivityModel();
            activityCreateContexts[proposalId] = new EditContext(newActivityModels[proposalId]);
        }
        else if (!activityCreateContexts.ContainsKey(proposalId))
        {
            activityCreateContexts[proposalId] = new EditContext(newActivityModels[proposalId]);
        }
    }

    private void ResetActivityModel(int proposalId)
    {
        newActivityModels[proposalId] = new NewProposalActivityModel();
        activityCreateContexts[proposalId] = new EditContext(newActivityModels[proposalId]);
    }

    private async Task SubmitActivityFormAsync(int proposalId)
    {
        if (!activityCreateContexts.TryGetValue(proposalId, out var context) || !context.Validate())
        {
            ShowToast(Localizer.GetString("Please correct the validation errors"), "danger");
            return;
        }

        if (!newActivityModels.TryGetValue(proposalId, out var model))
        {
            ShowToast(Localizer.GetString("Error creating activity"), "danger");
            return;
        }

        var editingId = editingActivityIds.TryGetValue(proposalId, out var id) ? id : null;
        isProcessingActivity[proposalId] = true;
        try
        {
            bool succeeded;
            if (editingId.HasValue)
            {
                var dto = new UpdatePreSalesActivityDto(
                    editingId.Value,
                    proposalId,
                    model.Summary,
                    string.IsNullOrWhiteSpace(model.Description) ? null : model.Description,
                    string.IsNullOrWhiteSpace(model.NextAction) ? null : model.NextAction,
                    string.IsNullOrWhiteSpace(model.ActivityType) ? null : model.ActivityType,
                    string.IsNullOrWhiteSpace(model.PerformedBy) ? null : model.PerformedBy,
                    model.ActivityDate);

                succeeded = await ActivitiesApi.UpdateActivityAsync(dto);
                ShowToast(Localizer.GetString(succeeded ? "Activity updated successfully" : "Failed to update activity"), succeeded ? "success" : "danger");
            }
            else
            {
                var dto = new CreatePreSalesActivityDto(
                    proposalId,
                    model.Summary,
                    string.IsNullOrWhiteSpace(model.Description) ? null : model.Description,
                    string.IsNullOrWhiteSpace(model.NextAction) ? null : model.NextAction,
                    string.IsNullOrWhiteSpace(model.ActivityType) ? null : model.ActivityType,
                    string.IsNullOrWhiteSpace(model.PerformedBy) ? null : model.PerformedBy,
                    model.ActivityDate);

                var created = await ActivitiesApi.CreateActivityAsync(dto);
                succeeded = created != null;
                ShowToast(Localizer.GetString(succeeded ? "Activity created successfully" : "Failed to create activity"), succeeded ? "success" : "danger");
            }

            if (!succeeded)
            {
                return;
            }

            var refreshed = await LoadActivitiesIfNeededAsync(proposalId, forceRefresh: true);
            if (selectedProposal?.Id == proposalId)
            {
                proposalActivities = refreshed;
            }

            showAddActivityForm[proposalId] = false;
            editingActivityIds[proposalId] = null;
            ResetActivityModel(proposalId);
        }
        catch (Exception ex)
        {
            ShowToast(Localizer.GetString(editingId.HasValue ? "Error updating activity" : "Error creating activity") + $": {ex.Message}", "danger");
        }
        finally
        {
            isProcessingActivity[proposalId] = false;
        }
    }

    private async Task<PreSalesActivityDto[]> LoadActivitiesIfNeededAsync(int proposalId, bool forceRefresh = false)
    {
        if (!forceRefresh && cachedProposalActivities.TryGetValue(proposalId, out var cached))
        {
            return cached;
        }

        loadingProposalActivities[proposalId] = true;
        try
        {
            var activities = await ActivitiesApi.GetActivitiesAsync(proposalId) ?? Array.Empty<PreSalesActivityDto>();
            cachedProposalActivities[proposalId] = activities;
            return activities;
        }
        catch (Exception ex)
        {
            cachedProposalActivities[proposalId] = Array.Empty<PreSalesActivityDto>();
            ShowToast(Localizer.GetString("Error loading activities") + $": {ex.Message}", "danger");
            return Array.Empty<PreSalesActivityDto>();
        }
        finally
        {
            loadingProposalActivities[proposalId] = false;
        }
    }

    private bool IsProposalLoadingActivities(int proposalId)
    {
        return loadingProposalActivities.TryGetValue(proposalId, out var loading) && loading;
    }

    private void HideModal()
    {
        showModal = false;
        editingProposal = new();
    }

    private void HideDetailsModal()
    {
        showDetailsModal = false;
        selectedProposal = null;
        proposalActivities = null;
    }

    private async Task SaveProposal()
    {
        try
        {
            if (editingProposal.Id == 0)
            {
                var dto = new CreatePreSalesProposalDto(
                    editingProposal.Title,
                    editingProposal.Description,
                    editingProposal.CustomerId,
                    editingProposal.RequirementDefinitionId,
                    editingProposal.Status,
                    editingProposal.Stage,
                    editingProposal.AssignedToUserId,
                    editingProposal.EstimatedValue,
                    editingProposal.ProbabilityPercentage,
                    editingProposal.ExpectedCloseDate,
                    editingProposal.Notes
                );
                var created = await ProposalsApi.CreateProposalAsync(dto);
                if (created != null)
                {
                    ShowToast(Localizer.GetString("Proposal created successfully!"), "success");
                    await LoadData();
                    HideModal();
                }
            }
            else
            {
                var dto = new UpdatePreSalesProposalDto(
                    editingProposal.Id,
                    editingProposal.Title,
                    editingProposal.Description,
                    editingProposal.CustomerId,
                    editingProposal.RequirementDefinitionId,
                    editingProposal.Status,
                    editingProposal.Stage,
                    editingProposal.AssignedToUserId,
                    editingProposal.EstimatedValue,
                    editingProposal.ProbabilityPercentage,
                    editingProposal.ExpectedCloseDate,
                    editingProposal.Notes
                );
                var success = await ProposalsApi.UpdateProposalAsync(dto);
                if (success)
                {
                    ShowToast(Localizer.GetString("Proposal updated successfully!"), "success");
                    await LoadData();
                    HideModal();
                }
            }
        }
        catch (Exception ex)
        {
            ShowToast(Localizer.GetString("Error saving proposal") + $": {ex.Message}", "danger");
        }
    }

    private async Task DeleteProposal(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", Localizer.GetString("Confirm Delete Proposal")))
        {
            var success = await ProposalsApi.DeleteProposalAsync(id);
            if (success)
            {
                ShowToast(Localizer.GetString("Proposal deleted successfully!"), "success");
                await LoadData();
            }
            else
            {
                ShowToast(Localizer.GetString("Error deleting proposal"), "danger");
            }
        }
    }

    private void ShowToast(string message, string type)
    {
        toastMessage = message;
        toastType = type;
        showToast = true;
    }

    private string GetStatusBadgeColor(PreSalesStatus status)
    {
        return status switch
        {
            PreSalesStatus.Draft => "secondary",
            PreSalesStatus.InReview => "info",
            PreSalesStatus.Pending => "warning",
            PreSalesStatus.Approved => "success",
            PreSalesStatus.Rejected => "danger",
            PreSalesStatus.Closed => "dark",
            _ => "secondary"
        };
    }

    private string GetStatusLabel(PreSalesStatus status) =>
        Localizer.GetString($"PreSalesStatus.{status}");

    private string GetStageLabel(PreSalesStage stage) =>
        Localizer.GetString($"PreSalesStage.{stage}");

    private string GetProposalTab(int proposalId)
    {
        return proposalActiveTabs.TryGetValue(proposalId, out var tab) ? tab : "activities";
    }

    private void SetProposalTab(int proposalId, string tab)
    {
        proposalActiveTabs[proposalId] = tab;
    }

    private void ToggleProposalDescription(int proposalId)
    {
        if (!proposalDescriptionExpanded.ContainsKey(proposalId))
        {
            proposalDescriptionExpanded[proposalId] = false;
        }

        proposalDescriptionExpanded[proposalId] = !proposalDescriptionExpanded[proposalId];
    }

    private string Truncate(string? s, int length)
    {
        if (string.IsNullOrEmpty(s)) return string.Empty;
        return s.Length <= length ? s : s.Substring(0, length) + "...";
    }

    class NewProposalActivityModel
    {
        public DateTime ActivityDate { get; set; } = DateTime.UtcNow;

        [Required, MaxLength(500)]
        public string Summary { get; set; } = string.Empty;

        [MaxLength(5000)]
        public string? Description { get; set; }

        [MaxLength(500)]
        public string? NextAction { get; set; }

        [MaxLength(200)]
        public string? ActivityType { get; set; }

        [MaxLength(200)]
        public string? PerformedBy { get; set; }
    }

