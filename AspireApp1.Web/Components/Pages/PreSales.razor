@page "/presales"
@rendermode InteractiveServer
@inject PreSalesProposalsApiClient ProposalsApi
@inject PreSalesActivitiesApiClient ActivitiesApi
@inject RequirementDefinitionsApiClient RequirementsApi
@inject CustomerApiClient CustomersApi
@inject AdminApiClient AdminApi
@inject IJSRuntime JSRuntime
@inject LocalizationService Localizer
@using AspireApp1.Web
@using AspireApp1.Web.Services
@using System.ComponentModel.DataAnnotations

<PageTitle>Pre-sales</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Pre-sales Proposals</h1>
    <button class="btn btn-primary" @onclick="ShowCreateModal">
        <i class="bi bi-plus-circle me-2"></i>Create Proposal
    </button>
</div>

@if (showToast && !string.IsNullOrEmpty(toastMessage))
{
    <div class="alert @(toastType == "success" ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
        @toastMessage
        <button type="button" class="btn-close" @onclick="() => showToast = false"></button>
    </div>
}

<div class="row mb-3">
    <div class="col-md-3">
        <label class="form-label">Customer</label>
        <select class="form-select" value="@filterCustomerId" @onchange="OnCustomerFilterChanged">
            <option value="">All Customers</option>
            @if (customers != null)
            {
                @foreach (var c in customers)
                {
                    <option value="@c.Id">@c.Name</option>
                }
            }
        </select>
    </div>
    <div class="col-md-3">
        <label class="form-label">Status</label>
        <select class="form-select" value="@filterStatus" @onchange="OnStatusFilterChanged">
            <option value="">All Statuses</option>
            <option value="Draft">Draft</option>
            <option value="InReview">In Review</option>
            <option value="Pending">Pending</option>
            <option value="Approved">Approved</option>
            <option value="Rejected">Rejected</option>
            <option value="Closed">Closed</option>
        </select>
    </div>
    <div class="col-md-3">
        <label class="form-label">Stage</label>
        <select class="form-select" value="@filterStage" @onchange="OnStageFilterChanged">
            <option value="">All Stages</option>
            <option value="InitialContact">Initial Contact</option>
            <option value="RequirementGathering">Requirement Gathering</option>
            <option value="ProposalDevelopment">Proposal Development</option>
            <option value="PresentationScheduled">Presentation Scheduled</option>
            <option value="NegotiationInProgress">Negotiation In Progress</option>
            <option value="AwaitingDecision">Awaiting Decision</option>
            <option value="Won">Won</option>
            <option value="Lost">Lost</option>
        </select>
    </div>
    <div class="col-md-3">
        <label class="form-label">Assigned To</label>
        <select class="form-select" value="@filterAssignedToUserId" @onchange="OnAssignedToFilterChanged">
            <option value="">All Users</option>
            @if (users != null)
            {
                @foreach (var u in users.Where(u => u.IsActive))
                {
                    <option value="@u.Id">@u.DisplayName</option>
                }
            }
        </select>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (filteredProposals != null && filteredProposals.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Customer</th>
                    <th>Status</th>
                    <th>Stage</th>
                    <th>Assigned To</th>
                    <th>Estimated Value</th>
                    <th>Probability</th>
                    <th>Expected Close</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var proposal in filteredProposals)
                {
                    <tr>
                        <td>@proposal.Id</td>
                        <td>@proposal.Title</td>
                        <td>@proposal.CustomerName</td>
                        <td><span class="badge bg-@GetStatusBadgeColor(proposal.Status)">@proposal.Status</span></td>
                        <td><span class="badge bg-secondary">@FormatStage(proposal.Stage)</span></td>
                        <td>@proposal.AssignedToUserName</td>
                        <td>@(proposal.EstimatedValue?.ToString("C") ?? "-")</td>
                        <td>@(proposal.ProbabilityPercentage?.ToString() + "%" ?? "-")</td>
                        <td>@(proposal.ExpectedCloseDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => ShowEditModal(proposal)">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-info" @onclick="() => ShowDetailsModal(proposal)">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteProposal(proposal.Id)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        No proposals found. Create one to get started!
    </div>
}

@* Create/Edit Modal *@
@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(editingProposal.Id == 0 ? "Create" : "Edit") Proposal</h5>
                    <button type="button" class="btn-close" @onclick="HideModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="editingProposal" OnValidSubmit="SaveProposal">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">Title *</label>
                            <InputText class="form-control" @bind-Value="editingProposal.Title" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <InputTextArea class="form-control" rows="3" @bind-Value="editingProposal.Description" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Customer *</label>
                                <InputSelect class="form-select" @bind-Value="editingProposal.CustomerId">
                                    <option value="0">-- Select Customer --</option>
                                    @if (customers != null)
                                    {
                                        @foreach (var c in customers)
                                        {
                                            <option value="@c.Id">@c.Name</option>
                                        }
                                    }
                                </InputSelect>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Requirement Definition</label>
                                <InputSelect class="form-select" @bind-Value="editingProposal.RequirementDefinitionId">
                                    <option value="">-- Optional --</option>
                                    @if (requirements != null)
                                    {
                                        @foreach (var r in requirements)
                                        {
                                            <option value="@r.Id">@r.Title</option>
                                        }
                                    }
                                </InputSelect>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Status</label>
                                <InputSelect class="form-select" @bind-Value="editingProposal.Status">
                                    <option value="@PreSalesStatus.Draft">Draft</option>
                                    <option value="@PreSalesStatus.InReview">In Review</option>
                                    <option value="@PreSalesStatus.Pending">Pending</option>
                                    <option value="@PreSalesStatus.Approved">Approved</option>
                                    <option value="@PreSalesStatus.Rejected">Rejected</option>
                                    <option value="@PreSalesStatus.Closed">Closed</option>
                                </InputSelect>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Stage</label>
                                <InputSelect class="form-select" @bind-Value="editingProposal.Stage">
                                    <option value="@PreSalesStage.InitialContact">Initial Contact</option>
                                    <option value="@PreSalesStage.RequirementGathering">Requirement Gathering</option>
                                    <option value="@PreSalesStage.ProposalDevelopment">Proposal Development</option>
                                    <option value="@PreSalesStage.PresentationScheduled">Presentation Scheduled</option>
                                    <option value="@PreSalesStage.NegotiationInProgress">Negotiation In Progress</option>
                                    <option value="@PreSalesStage.AwaitingDecision">Awaiting Decision</option>
                                    <option value="@PreSalesStage.Won">Won</option>
                                    <option value="@PreSalesStage.Lost">Lost</option>
                                </InputSelect>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Assigned To</label>
                                <InputSelect class="form-select" @bind-Value="editingProposal.AssignedToUserId">
                                    <option value="">-- Unassigned --</option>
                                    @if (users != null)
                                    {
                                        @foreach (var u in users.Where(u => u.IsActive))
                                        {
                                            <option value="@u.Id">@u.DisplayName</option>
                                        }
                                    }
                                </InputSelect>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Expected Close Date</label>
                                <InputDate class="form-control" @bind-Value="editingProposal.ExpectedCloseDate" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Estimated Value</label>
                                <InputNumber class="form-control" @bind-Value="editingProposal.EstimatedValue" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Probability (%)</label>
                                <InputNumber class="form-control" @bind-Value="editingProposal.ProbabilityPercentage" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Notes</label>
                            <InputTextArea class="form-control" rows="3" @bind-Value="editingProposal.Notes" />
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="HideModal">Cancel</button>
                            <button type="submit" class="btn btn-primary">@(editingProposal.Id == 0 ? "Create" : "Save")</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@* Details Modal *@
@if (showDetailsModal && selectedProposal != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Proposal Details - @selectedProposal.Title</h5>
                    <button type="button" class="btn-close" @onclick="HideDetailsModal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">ID:</dt>
                                <dd class="col-sm-8">@selectedProposal.Id</dd>
                                
                                <dt class="col-sm-4">Customer:</dt>
                                <dd class="col-sm-8">@selectedProposal.CustomerName</dd>
                                
                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8"><span class="badge bg-@GetStatusBadgeColor(selectedProposal.Status)">@selectedProposal.Status</span></dd>
                                
                                <dt class="col-sm-4">Stage:</dt>
                                <dd class="col-sm-8"><span class="badge bg-secondary">@FormatStage(selectedProposal.Stage)</span></dd>
                                
                                <dt class="col-sm-4">Assigned To:</dt>
                                <dd class="col-sm-8">@(selectedProposal.AssignedToUserName ?? "Unassigned")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Estimated Value:</dt>
                                <dd class="col-sm-7">@(selectedProposal.EstimatedValue?.ToString("C") ?? "-")</dd>
                                
                                <dt class="col-sm-5">Probability:</dt>
                                <dd class="col-sm-7">@(selectedProposal.ProbabilityPercentage?.ToString() + "%" ?? "-")</dd>
                                
                                <dt class="col-sm-5">Expected Close:</dt>
                                <dd class="col-sm-7">@(selectedProposal.ExpectedCloseDate?.ToString("yyyy-MM-dd") ?? "-")</dd>
                                
                                <dt class="col-sm-5">Created:</dt>
                                <dd class="col-sm-7">@selectedProposal.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
                                
                                <dt class="col-sm-5">Updated:</dt>
                                <dd class="col-sm-7">@(selectedProposal.UpdatedAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</dd>
                            </dl>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(selectedProposal.Description))
                    {
                        <div class="mt-3">
                            <h6>Description:</h6>
                            <p>@selectedProposal.Description</p>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(selectedProposal.Notes))
                    {
                        <div class="mt-3">
                            <h6>Notes:</h6>
                            <p>@selectedProposal.Notes</p>
                        </div>
                    }

                    <div class="mt-4">
                        <h6>Activities</h6>
                        @if (proposalActivities != null && proposalActivities.Any())
                        {
                            <div class="list-group">
                                @foreach (var activity in proposalActivities)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">@activity.Summary</h6>
                                            <small>@activity.ActivityDate.ToString("yyyy-MM-dd HH:mm")</small>
                                        </div>
                                        @if (!string.IsNullOrEmpty(activity.Description))
                                        {
                                            <p class="mb-1">@activity.Description</p>
                                        }
                                        <small>@activity.ActivityType - @activity.PerformedBy</small>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No activities yet.</p>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDetailsModal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private PreSalesProposalDto[]? proposals;
    private PreSalesProposalDto[]? filteredProposals;
    private CustomerDto[]? customers;
    private UserDto[]? users;
    private RequirementDefinitionDto[]? requirements;
    private PreSalesActivityDto[]? proposalActivities;
    
    private bool isLoading = true;
    private bool showModal = false;
    private bool showDetailsModal = false;
    private bool showToast = false;
    private string toastMessage = "";
    private string toastType = "success";
    
    private PreSalesProposalEditModel editingProposal = new();
    private PreSalesProposalDto? selectedProposal;
    
    private string? filterCustomerId = "";
    private string? filterStatus = "";
    private string? filterStage = "";
    private string? filterAssignedToUserId = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        
        proposals = await ProposalsApi.GetProposalsAsync();
        customers = await CustomersApi.GetCustomersAsync();
        users = await AdminApi.GetUsersAsync();
        requirements = await RequirementsApi.GetRequirementDefinitionsAsync();
        
        ApplyFilters();
        isLoading = false;
    }

    private void ApplyFilters()
    {
        filteredProposals = proposals;
        
        if (!string.IsNullOrEmpty(filterCustomerId) && int.TryParse(filterCustomerId, out var custId))
        {
            filteredProposals = filteredProposals?.Where(p => p.CustomerId == custId).ToArray();
        }
        
        if (!string.IsNullOrEmpty(filterStatus) && Enum.TryParse<PreSalesStatus>(filterStatus, out var status))
        {
            filteredProposals = filteredProposals?.Where(p => p.Status == status).ToArray();
        }
        
        if (!string.IsNullOrEmpty(filterStage) && Enum.TryParse<PreSalesStage>(filterStage, out var stage))
        {
            filteredProposals = filteredProposals?.Where(p => p.Stage == stage).ToArray();
        }
        
        if (!string.IsNullOrEmpty(filterAssignedToUserId) && int.TryParse(filterAssignedToUserId, out var userId))
        {
            filteredProposals = filteredProposals?.Where(p => p.AssignedToUserId == userId).ToArray();
        }
    }

    private void OnCustomerFilterChanged(ChangeEventArgs e)
    {
        filterCustomerId = e.Value?.ToString();
        ApplyFilters();
    }

    private void OnStatusFilterChanged(ChangeEventArgs e)
    {
        filterStatus = e.Value?.ToString();
        ApplyFilters();
    }

    private void OnStageFilterChanged(ChangeEventArgs e)
    {
        filterStage = e.Value?.ToString();
        ApplyFilters();
    }

    private void OnAssignedToFilterChanged(ChangeEventArgs e)
    {
        filterAssignedToUserId = e.Value?.ToString();
        ApplyFilters();
    }

    private void ShowCreateModal()
    {
        editingProposal = new PreSalesProposalEditModel();
        showModal = true;
    }

    private void ShowEditModal(PreSalesProposalDto proposal)
    {
        editingProposal = new PreSalesProposalEditModel
        {
            Id = proposal.Id,
            Title = proposal.Title,
            Description = proposal.Description,
            CustomerId = proposal.CustomerId,
            RequirementDefinitionId = proposal.RequirementDefinitionId,
            Status = proposal.Status,
            Stage = proposal.Stage,
            AssignedToUserId = proposal.AssignedToUserId,
            EstimatedValue = proposal.EstimatedValue,
            ProbabilityPercentage = proposal.ProbabilityPercentage,
            ExpectedCloseDate = proposal.ExpectedCloseDate,
            Notes = proposal.Notes
        };
        showModal = true;
    }

    private async Task ShowDetailsModal(PreSalesProposalDto proposal)
    {
        selectedProposal = proposal;
        proposalActivities = await ActivitiesApi.GetActivitiesAsync(proposal.Id);
        showDetailsModal = true;
    }

    private void HideModal()
    {
        showModal = false;
        editingProposal = new();
    }

    private void HideDetailsModal()
    {
        showDetailsModal = false;
        selectedProposal = null;
        proposalActivities = null;
    }

    private async Task SaveProposal()
    {
        try
        {
            if (editingProposal.Id == 0)
            {
                var dto = new CreatePreSalesProposalDto(
                    editingProposal.Title,
                    editingProposal.Description,
                    editingProposal.CustomerId,
                    editingProposal.RequirementDefinitionId,
                    editingProposal.Status,
                    editingProposal.Stage,
                    editingProposal.AssignedToUserId,
                    editingProposal.EstimatedValue,
                    editingProposal.ProbabilityPercentage,
                    editingProposal.ExpectedCloseDate,
                    editingProposal.Notes
                );
                var created = await ProposalsApi.CreateProposalAsync(dto);
                if (created != null)
                {
                    ShowToast("Proposal created successfully!", "success");
                    await LoadData();
                    HideModal();
                }
            }
            else
            {
                var dto = new UpdatePreSalesProposalDto(
                    editingProposal.Id,
                    editingProposal.Title,
                    editingProposal.Description,
                    editingProposal.CustomerId,
                    editingProposal.RequirementDefinitionId,
                    editingProposal.Status,
                    editingProposal.Stage,
                    editingProposal.AssignedToUserId,
                    editingProposal.EstimatedValue,
                    editingProposal.ProbabilityPercentage,
                    editingProposal.ExpectedCloseDate,
                    editingProposal.Notes
                );
                var success = await ProposalsApi.UpdateProposalAsync(dto);
                if (success)
                {
                    ShowToast("Proposal updated successfully!", "success");
                    await LoadData();
                    HideModal();
                }
            }
        }
        catch (Exception ex)
        {
            ShowToast($"Error saving proposal: {ex.Message}", "danger");
        }
    }

    private async Task DeleteProposal(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this proposal?"))
        {
            var success = await ProposalsApi.DeleteProposalAsync(id);
            if (success)
            {
                ShowToast("Proposal deleted successfully!", "success");
                await LoadData();
            }
            else
            {
                ShowToast("Error deleting proposal", "danger");
            }
        }
    }

    private void ShowToast(string message, string type)
    {
        toastMessage = message;
        toastType = type;
        showToast = true;
    }

    private string GetStatusBadgeColor(PreSalesStatus status)
    {
        return status switch
        {
            PreSalesStatus.Draft => "secondary",
            PreSalesStatus.InReview => "info",
            PreSalesStatus.Pending => "warning",
            PreSalesStatus.Approved => "success",
            PreSalesStatus.Rejected => "danger",
            PreSalesStatus.Closed => "dark",
            _ => "secondary"
        };
    }

    private string FormatStage(PreSalesStage stage)
    {
        return stage switch
        {
            PreSalesStage.InitialContact => "Initial Contact",
            PreSalesStage.RequirementGathering => "Requirement Gathering",
            PreSalesStage.ProposalDevelopment => "Proposal Development",
            PreSalesStage.PresentationScheduled => "Presentation Scheduled",
            PreSalesStage.NegotiationInProgress => "Negotiation In Progress",
            PreSalesStage.AwaitingDecision => "Awaiting Decision",
            PreSalesStage.Won => "Won",
            PreSalesStage.Lost => "Lost",
            _ => stage.ToString()
        };
    }

    public class PreSalesProposalEditModel
    {
        public int Id { get; set; }
        
        [Required]
        public string Title { get; set; } = "";
        
        public string? Description { get; set; }
        
        [Required]
        [Range(1, int.MaxValue, ErrorMessage = "Please select a customer")]
        public int CustomerId { get; set; }
        
        public int? RequirementDefinitionId { get; set; }
        
        public PreSalesStatus Status { get; set; } = PreSalesStatus.Draft;
        
        public PreSalesStage Stage { get; set; } = PreSalesStage.InitialContact;
        
        public int? AssignedToUserId { get; set; }
        
        public decimal? EstimatedValue { get; set; }
        
        [Range(0, 100)]
        public int? ProbabilityPercentage { get; set; }
        
        public DateTime? ExpectedCloseDate { get; set; }
        
        public string? Notes { get; set; }
    }
}
