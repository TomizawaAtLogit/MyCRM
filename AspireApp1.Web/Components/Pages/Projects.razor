        {
            ShowToast("Error: Activity form context not found", "danger");
            return;
        }
        
        if (!activityCreateContexts[projectId].Validate())
        {
            ShowToast("Please correct the validation errors", "danger");
            return;
        }
        
        try
        {
            var model = newActivityModels[projectId];
