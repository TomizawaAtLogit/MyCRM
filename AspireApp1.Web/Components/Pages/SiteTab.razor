@using System.ComponentModel.DataAnnotations
@inject CustomerApiClient CustomerApi
@inject IJSRuntime JSRuntime
@inject GoogleMapsService GoogleMapsService

<div class="row">
    <div class="col-md-6">
        <h5>Sites</h5>
        @if (Sites == null || !Sites.Any())
        {
            <p class="text-muted">No sites configured.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Site Name</th>
                            <th>Description</th>
                            <th>Contact</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var site in Sites)
                        {
                            <tr class="@(selectedSite?.Id == site.Id ? "table-active" : "")" 
                                style="cursor: pointer;"
                                @onclick="() => SelectSite(site)">
                                <td>@site.SiteName</td>
                                <td>@site.Description</td>
                                <td>@site.ContactPerson</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => StartEdit(site)" @onclick:stopPropagation="true">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteAsync(site.Id)" @onclick:stopPropagation="true">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
    <div class="col-md-6">
        <h5>Location Map</h5>
        <div id="siteMap" style="width: 100%; height: 400px; border: 1px solid #ddd; border-radius: 4px;"></div>
        @if (selectedSite == null)
        {
            <p class="text-muted mt-2"><small>Select a site from the list to view its location on the map.</small></p>
        }
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Add Site</h5>
                <button class="btn btn-sm btn-outline-primary" @onclick="() => showCreateForm = !showCreateForm">
                    <i class="bi @(showCreateForm ? "bi-chevron-up" : "bi-chevron-down")"></i>
                </button>
            </div>
            @if (showCreateForm)
            {
                <div class="card-body">
                <EditForm Model="newSite" OnValidSubmit="CreateAsync">
                    <DataAnnotationsValidator />
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <label class="form-label">Site Name</label>
                            <InputText @bind-Value="newSite.SiteName" class="form-control form-control-sm" />
                        </div>
                        <div class="col-md-4 mb-2">
                            <label class="form-label">Post Code</label>
                            <InputText @bind-Value="newSite.PostCode" class="form-control form-control-sm" />
                        </div>
                        <div class="col-md-4 mb-2">
                            <label class="form-label">Contact Person</label>
                            <InputText @bind-Value="newSite.ContactPerson" class="form-control form-control-sm" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <label class="form-label">Phone</label>
                            <InputText @bind-Value="newSite.Phone" class="form-control form-control-sm" />
                        </div>
                        <div class="col-md-8 mb-2">
                            <label class="form-label">Address</label>
                            <InputText @bind-Value="newSite.Address" class="form-control form-control-sm" />
                        </div>
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Description</label>
                        <InputTextArea @bind-Value="newSite.Description" class="form-control form-control-sm" rows="3" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm">Add Site</button>
                </EditForm>
                </div>
            }
        </div>
    </div>
</div>

<!-- Edit Site Modal -->
<div class="modal fade" id="editSiteModal" tabindex="-1" aria-labelledby="editSiteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editSiteModalLabel">Edit Site</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="editSite" OnValidSubmit="UpdateSiteAsync">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger" />
                    <div class="mb-3">
                        <label class="form-label">Site Name</label>
                        <InputText @bind-Value="editSite.SiteName" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <InputText @bind-Value="editSite.Address" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Post Code</label>
                        <InputText @bind-Value="editSite.PostCode" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contact Person</label>
                        <InputText @bind-Value="editSite.ContactPerson" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone</label>
                        <InputText @bind-Value="editSite.Phone" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <InputTextArea @bind-Value="editSite.Description" class="form-control" rows="3" />
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary" disabled="@isEditingSite">
                            @if (isEditingSite)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            Save Changes
                        </button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public int CustomerId { get; set; }

    [Parameter]
    public List<CustomerSiteDto> Sites { get; set; } = new();

    [Parameter]
    public EventCallback OnRefresh { get; set; }

    private NewSiteModel newSite = new();
    private EditSiteModel editSite = new();
    private int editingSiteId = 0;
    private bool showCreateForm = false;
    private bool isEditingSite = false;
    private CustomerSiteDto? selectedSite = null;
    private bool mapInitialized = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await InitializeMapAsync();
        }
    }

    private async Task InitializeMapAsync()
    {
        try
        {
            var apiKey = GoogleMapsService.GetApiKey();
            if (string.IsNullOrEmpty(apiKey) || apiKey == "YOUR_GOOGLE_MAPS_API_KEY_HERE" || apiKey == "YOUR_DEVELOPMENT_GOOGLE_MAPS_API_KEY_HERE")
            {
                Console.WriteLine("Google Maps API key not configured. Map will not be displayed.");
                return;
            }

            await JSRuntime.InvokeVoidAsync("googleMapsHelper.initMap", "siteMap", apiKey);
            mapInitialized = true;
            
            // If there are sites, select the first one
            if (Sites?.Any() == true)
            {
                await SelectSite(Sites.First());
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error initializing map: {ex.Message}");
        }
    }

    private async Task SelectSite(CustomerSiteDto site)
    {
        selectedSite = site;
        
        if (mapInitialized)
        {
            try
            {
                var fullAddress = BuildFullAddress(site);
                await JSRuntime.InvokeVoidAsync("googleMapsHelper.showSite", 
                    site.SiteName, 
                    fullAddress, 
                    site.Latitude, 
                    site.Longitude);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error showing site on map: {ex.Message}");
            }
        }
    }

    private string BuildFullAddress(CustomerSiteDto site)
    {
        var parts = new List<string>();
        if (!string.IsNullOrEmpty(site.Address)) parts.Add(site.Address);
        if (!string.IsNullOrEmpty(site.PostCode)) parts.Add(site.PostCode);
        if (!string.IsNullOrEmpty(site.Country)) parts.Add(site.Country);
        return string.Join(", ", parts);
    }

    private async Task CreateAsync()
    {
        var dto = new CustomerSiteCreateDto(
            newSite.SiteName!,
            newSite.Address,
            newSite.PostCode,
            null,
            newSite.ContactPerson,
            newSite.Phone,
            newSite.Description,
            null, // Latitude - will be set by geocoding later
            null); // Longitude - will be set by geocoding later

        await CustomerApi.AddSiteAsync(CustomerId, dto);
        newSite = new();
        showCreateForm = false;
        await OnRefresh.InvokeAsync();
    }

    private async Task DeleteAsync(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this site?");
        if (!confirmed) return;
        
        await CustomerApi.DeleteSiteAsync(CustomerId, id);
        await OnRefresh.InvokeAsync();
    }

    private async Task StartEdit(CustomerSiteDto site)
    {
        editingSiteId = site.Id;
        editSite = new EditSiteModel
        {
            SiteName = site.SiteName,
            Address = site.Address,
            PostCode = site.PostCode,
            ContactPerson = site.ContactPerson,
            Phone = site.Phone,
            Description = site.Description
        };
        await JSRuntime.InvokeVoidAsync("modalHelper.show", "editSiteModal");
    }

    private async Task UpdateSiteAsync()
    {
        isEditingSite = true;
        try
        {
            var dto = new CustomerSiteDto(
                editingSiteId,
                CustomerId,
                editSite.SiteName!,
                editSite.Address,
                editSite.PostCode,
                null, // Country
                editSite.ContactPerson,
                editSite.Phone,
                editSite.Description,
                null, // Latitude - will be set by geocoding later
                null); // Longitude - will be set by geocoding later

            var success = await CustomerApi.UpdateSiteAsync(CustomerId, editingSiteId, dto);
            if (success)
            {
                await JSRuntime.InvokeVoidAsync("modalHelper.hide", "editSiteModal");
                await OnRefresh.InvokeAsync();
            }
        }
        catch (Exception ex)
        {
            // Could add toast notification here
            Console.WriteLine($"Error updating site: {ex.Message}");
        }
        finally
        {
            isEditingSite = false;
        }
    }

    class NewSiteModel
    {
        [Required]
        public string? SiteName { get; set; }
        public string? Address { get; set; }
        public string? PostCode { get; set; }
        public string? ContactPerson { get; set; }
        public string? Phone { get; set; }
        public string? Description { get; set; }
    }

    class EditSiteModel
    {
        [Required]
        public string? SiteName { get; set; }
        public string? Address { get; set; }
        public string? PostCode { get; set; }
        public string? ContactPerson { get; set; }
        public string? Phone { get; set; }
        public string? Description { get; set; }
    }
}
